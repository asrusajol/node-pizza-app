<section class="cart py-16">
    <% if(!session.cart) { %> 
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2 "> Cart Empty ðŸ¤•ðŸ¤•ðŸ¤•</h1>
            <p class="text-gray-500 text-lg mb-12">There is no pizza in your cart.<br> Go to home page to add one !!!</p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary font-bold mt-12">Go Back</a>
        </div>
    </div>
    <% }else { %> 

    <div class="container order mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold  ml-4 text-2xl">Order summary</h1> 
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %> 
            <div class="flex items-center my-8">
                <img src="/img/<%= pizza.item.image %>" class="w-24" alt="">
                <div class="ml-4 flex-1">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %> Pcs</span>
                <span class="font-bold text-lg"><%= pizza.item.price * pizza.qty %> à§³</span>
            </div>
            <% } %> 

            <hr>

            <div class="text-right py-4">
                <div>
                    <span class="texit-lg font-bold">Toral Amount : </span>
                    <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalPrice %>  à§³</span>

                </div>
                <div>
                    <form action="" class="mt-10">
                        <input class="border border-gray-400 p-2 w-1/2 mb-2 rounded-t-lg" type="text" placeholder="Phone Number">
                        <input class="border border-gray-400 p-2 w-1/2 rounded-b-lg" type="text" placeholder="Address">
                        <!-- <div>
                            <button type="submit" class="btn-primary rounded-full px-6 py-2 font-bold mt-4">Place Order</button>
                        </div> -->
                    </form>
                </div>
                <a href="/login" class="inline-block coursor-pointer btn-primary rounded-full px-6 py-2 font-bold mt-4">Login to continue</a>
            </div>
            
            
        </div>

    </div>
    <% } %> 
</section>