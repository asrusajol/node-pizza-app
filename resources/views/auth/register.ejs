<section class="register">
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 border border-gray-500 p-16 rounded-md">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-500">
                    Register an Account
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                </p>
            </div>
            <form class="mt-8 space-y-6" action="#" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div class="pb-2">
                        <label for="name" class="sr-only">name</label>
                        <input id="name" name="name" type="Text" autocomplete="email" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Enter Your Name">
                    </div>
                    <div class="pb-2">
                        <label for="email-address" class="sr-only">Email address</label>
                        <input id="email-address" name="email" type="email" autocomplete="email" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Email address">
                    </div>
                    <div class="pb-2">
                        <label for="password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password" autocomplete="current-password" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Password">
                    </div>
                    <div>
                        <label for="confirm password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password" autocomplete="current-password" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder=" Confirm Password">
                    </div>
                </div>

                <div class="container mx-auto flex items-center justify-between">
                    <button type="submit"
                        class="group relative w-1/2 flex justify-center py-2 px-4 border border-transparent text-lg font-bold rounded-full btn-primary">
                        Register
                    </button>
                    <a href="/login" class="pl-4 font-medium text-indigo-600 hover:text-indigo-500 font-bold">
                        Already have account?
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>